{%- extends 'base.njk' %}
{%- block content %}
  <main class="main-content">
    {% include "./partials/masthead.njk" %}
    <section id="{{ layout }}-form" class="position-relative">
      <div class="container py-4 py-lg-5">
        <div class="row gy-lg-4">
          <div class="col-12 col-lg-9 mx-auto text-center">
            <h2>{{ form.title | markdown | safe }}</h2>
            {{ form.text | markdown | safe }}
          </div>
          <div class="col-12 col-lg-9 mx-auto">
            <div class="shadow rounded p-3 p-lg-5">
              {% include "./partials/forms/contact-form.njk" %}
            </div>
          </div>
        </div>
      </div>
    </section>
    <section id="{{ layout }}-faq" class="bg-light">
      <div class="container py-4 py-lg-5">
        <div class="row gx-lg-5 gx-xl-6">
          <div class="col-12 col-lg-4">
            <h2>{{ faq.title | markdown | safe }}</h2>
          </div>
          <div class="col-12 col-lg-8">
            {% set context = {
              id: 'example',
              headerTag: 'div',
              items: faq.items
            } %}
            {% include "@marke/ui-core/components/accordion/accordion.njk" %}
          </div>
        </div>
      </div>
    </section>
    <section id="{{ layout }}-cta">
      <div class="container py-4 py-lg-5">
        <div class="row">
          <div class="col-12 col-lg-8 mx-auto text-center">
            <h2>{{ cta.title | markdown | safe }}</h2>
            <p>{{ cta.description | e | safe }}</p>
            {%- set context = {
              theme: 'primary',
              href: cta.btn.url,
              text: cta.btn.text
            } %}
            {% include "@marke/ui-core/components/button/button.njk" %}
          </div>
        </div>
      </div>
    </section>
  </main>
{%- endblock %}
{{ content | safe }}