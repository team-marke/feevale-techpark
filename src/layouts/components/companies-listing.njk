{%- if context %}
  {% set companies = context.companies %}
  {% set units = context.units %}
{% endif %}


<div class="companies-listing">
  <div class="companies-listing__filters">
    <select class="select companies-dynamic-select" aria-label="Seleção" id="sample-select-1">
      <option value="">Selecione</option>
      {% for unit in units %}
        <option value="{{ unit.title | slug }}">{{ unit.title }}</option>
      {% endfor %}  
    </select>
  </div>
  <div class="companies-listing__companies">
    {% for company in companies %}
      <div>{{ company.title }}</div>
    {% endfor %}  
  </div>
</div>